<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Film Dash</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel ="stylesheet" href='../../stylesheets/style.css'> 
  <link rel="icon" type="image/x-icon" href="/images/favicon.png">
</head>
<body class = "bg-black h-auto ">
<div 
    id="container"
    class = "grid flex-col relative grow min-h-[120vh] w-full"
>
    <div 
        id = "contentWrapper"
        class="pb-[5.5rem]"
    >
        <div class = "w-full">
            <%- include("partials/header") %>
            <%- include("partials/MobileMenu") %>
        </div>
        <div class = "relative text-white relative before:bg-black before:z-[1] before:h-full before:w-full 
        before:block before:absolute before:left-0 before:right-0 before:top-0 before:opacity-60">
            <img 
            class = "h-full w-full " 
            src = '<%= movie.poster %>'
            alt = "<%= movie.title%> poster"
            />
            <div 
            id="MovieTitleBlock"
                class = "z-[2] text-white absolute top-[15%] sm:top-[5%] left-[50%] translate-x-[-50%] 
                md:max-w-2xl mx-auto">
                <h1 class = "text-4xl sm:text-5xl text-center"><%= movie.title%></h1>
                <% if(typeof director != "undefined") { %> 
                    <p class = "text-2xl sm:text-3xl text-center">Directed by
                        <% director.forEach((person, ind) =>{ %> 
                             <span><%= person.name %><span>
                             <% if(ind < director.length - 2){ %>
                                <span>, </span>
                             <% } else if(ind == director.length - 2 ) { %> 
                                <span> and </span>
                             <%} %> 
                        <%})%>
                    </p>
                <%}%>
                <p class = "text-2xl sm:text-3xl text-center mt-[10px]">Starring</p>
                <% if(movie.actors) { %> 
                    <ul class = "mx-auto text-center">
                    <% movie.actors.forEach(actor =>{ %> 
                        <li><%= actor.name %></li>
                    <%})%>
                    </ul>
                <%}%>
                <div class = "my-10 mx-auto">
                    <div id = "detail_shell" class = "w-fit mx-auto">
                        <% if(movie.tagline) { %> 
                            <p>Tagline: <%= decodeURIComponent(movie.tagline) %></p>
                        <%}%>
                        <div class = "">
                            <p>Genre: 
                                <% if(movie.genres){ %> 
                                    <% movie.genres.forEach((val, ind) =>{%>
                                        <span><%= val.name %></span>
                                        <% if(ind < movie.genres.length - 1){ %>
                                            <span> | </span>
                                        <%} %>
                                    <%})%>
                                <%}%>
                            </p>
                        </div>
                        <% if (movie.imdb_rating) {%><p>IMDB rating: <%= movie.imdb_rating%></p><% } %>
                        <% if (movie.parental_guide) {%><p>Parental Guide: <%= movie.parental_guide %></p><% } %>
                        <% if (movie.release_date) { %><p>Releaset Date: <%= movie.FormattedReleaseDate %> </p><% } %>
                        <% if (movie.production_company) {%><p>Production Company: <%= movie.production_company %></p><% } %>
                        <% if (movie.budget) {%><p>Budget: <%= movie.budget %></p><% } %>
                        <% if (movie.runtime) {%><p>Runtime : <%= movie.runtime_minutes %></p><% } %>
                    </div>
                </div>
                <%- include('partials/CRUDButtons') %>
                <% if(typeof movieinstances != "undefined" && movieinstances.length > 0){ %> 
                    <div 
                        id="MovieInstanceField"
                        class = "my-[50px] w-fit mx-auto" 
                    >
                        <h3>Current Copies</h3>
                        <ul>
                            <% movieinstances.forEach((instance, index) => { %> 
                                <li class="flex my-[30px] grid border-white border-[1px] rounded-lg p-5">
                                    <div class = "mx-1"><%= index + 1%>.) ID: <%= instance._id%> </div>
                                    <div class = "">Status: <span
                                    class = "<% 
                                            let statusClass;
                                            switch(instance.status) {
                                            case 'Available':
                                                statusClass = 'bg-[#50C819]';
                                                break;
                                            case 'Maintenance':
                                                statusClass = 'bg-[#FFFF00]';
                                                break;
                                            case 'Loaned':
                                                statusClass = 'bg-[#FF0000]';
                                                break;
                                            case 'Reserved':
                                                statusClass = 'bg-[#9fc5e8]';
                                                break;
                                            default:
                                                statusClass = '';
                                                break;
                                            }
                                            %> <%= statusClass %> !text-black"
                                    ><%= instance.status%></span></div> 
                                    <% if(typeof instance.due_back != 'undefined' && instance.due_back != "") { %> 
                                        <span class = "mx-1">Due Back Date: <%= instance.due_back %></span>
                                    <% } %>
                                </li>
                            <%}) %>
                        </ul>
                    </div>
                <%}%>
              </div>
         </div>
    </div>
</div>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
</body>
</html>