<script>
	const codeEntities = {
		"&amp;": "&",
		"&lt;": "<",
		"&gt;": ">",
		"&quot;": '"',
		"&#x27;": "'",
		"&#x2F;": '/',
		"&#39;": "\'",
		"&#34;": "\""
	};

	const ParseText = (text) => {
		var copy = text.toString();
		return copy.replace(
		/&lt;|&gt;|&quot;|&#x27;|&#x2F;|&amp;|&#39;|&#34;/gi,
		(match) => codeEntities[match]
		);
	};

	const Join = (arr) =>{
		var stringData = ""
		arr.forEach((val, ind) => {
		if (ind < arr.length - 1)
					stringData += val + "|";
				else
					stringData += val; 
			})
			return stringData; 
	}
</script>