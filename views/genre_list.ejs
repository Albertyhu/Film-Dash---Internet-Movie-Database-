<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Film Dash</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel ="stylesheet" href='../stylesheets/style.css'> 
  <link rel="icon" type="image/x-icon" href="/images/favicon.png">
</head>
<body class = "bg-black h-auto">
  <div 
  id="container"
  class = "w-full flex flex-col relative grow min-h-[120vh]">
      <div 
        id = "contentWrapper"
        class = "pb-[5.5rem] mb-[50px]">
          <div class = "w-full mb-[100px]">
            <%- include("partials/header") %>
            <%- include("partials/MobileMenu") %>
          </div>
          <h1 class = "text-white text-center text-4xl mb-[30px]"><%= title %></h1>
              <div class = "rounded-full p-[10px] active:translate-x-[5px] active:translate-y-[5px] cursor-pointer
                border-white border-2 text-center w-[150px] select-none text-white mx-auto
                hover:bg-gray-800 text-center my-10">
                 <a href ="/catalog/genre/create">Add a genre</a>
              </div>
          <%if(typeof genre_list != "undefined"){ %> 
            <div class = "sm:grid sm:grid-cols-2 md:grid-cols-3">
                <% genre_list.forEach(genre => { %> 
                    <a href ="../<%= genre.url %>">
                        <div
                            id="genre_panel"
                            class = "rounded-lg w-11/12 m-auto text-white bg-[url('<%= genre.image %>')] 
                            bg-center cursor-pointer bg-contain bg-no-repeat
                            relative before:bg-black before:z-[1] before:h-full before:w-full before:absolute
                            before:left-0 before:right-0 before:top-0 before:opacity-60 justify-center
                            min-h-[300px] before:hover:opacity-20 before:transition-opacity
                            before:duration-500"
                        >
                            <h2 
                                class = "text-4xl text-center z-10 absolute left-0 right-0 top-[50%] font-bold"
                            >
                                <%= genre.name%>
                            </h2>
                        </div>
                    </a>
                <%})%>
            </div>
          <%} else { %> 
            <div class = "font-bold text-white text-center my-[100px] text=3xl">There is nothing here.</div>
          <%}%>
      </div>
      <%- include('partials/footer') %>
  </div>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
</body>
</html>